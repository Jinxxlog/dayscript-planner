import 'dart:io';
import 'package:flutter/material.dart';
import 'package:window_size/window_size.dart';
import 'package:shared_preferences/shared_preferences.dart';
import 'themes/app_themes.dart';
import 'pages/planner_home.dart';

void main() async {
  WidgetsFlutterBinding.ensureInitialized();

  if (Platform.isWindows || Platform.isLinux || Platform.isMacOS) {
    setWindowTitle('My Planner');
    setWindowMinSize(const Size(800, 600));
    setWindowMaxSize(Size.infinite);

    final prefs = await SharedPreferences.getInstance();

    // ğŸ”¹ ì €ì¥ëœ í¬ê¸° ë¶ˆëŸ¬ì˜¤ê¸°
    final left = prefs.getDouble("window_left");
    final top = prefs.getDouble("window_top");
    final width = prefs.getDouble("window_width");
    final height = prefs.getDouble("window_height");

    if (left != null && top != null && width != null && height != null) {
      setWindowFrame(Rect.fromLTWH(left, top, width, height));
    } else {
      // ğŸ”¹ ê¸°ë³¸ê°’ (ëª¨ë‹ˆí„° í•´ìƒë„ì˜ 50%)
      final screen = await getCurrentScreen();
      if (screen != null) {
        final frame = screen.frame;
        final w = frame.width * 0.5;
        final h = frame.height * 0.5;
        final l = frame.left + (frame.width - w) / 2;
        final t = frame.top + (frame.height - h) / 2;
        setWindowFrame(Rect.fromLTWH(l, t, w, h));
      }
    }
  }

  runApp(const MyPlannerApp());
}

class MyPlannerApp extends StatefulWidget {
  const MyPlannerApp({super.key});

  @override
  State<MyPlannerApp> createState() => _MyPlannerAppState();
}

class _MyPlannerAppState extends State<MyPlannerApp> with WidgetsBindingObserver {
  String _currentThemeKey = "light";

  @override
  void initState() {
    super.initState();
    _loadTheme();
    WidgetsBinding.instance.addObserver(this); // ğŸ”¹ ì•± ë¼ì´í”„ì‚¬ì´í´ ê°ì‹œ ì‹œì‘
  }

  @override
  void dispose() {
    WidgetsBinding.instance.removeObserver(this);
    super.dispose();
  }

  // ğŸ”¹ ì•± ìƒíƒœ ë³€ê²½ ê°ì‹œ
  @override
  void didChangeAppLifecycleState(AppLifecycleState state) {
    if (state == AppLifecycleState.detached || state == AppLifecycleState.inactive) {
      _saveWindowSize(); // ì•± ì¢…ë£Œ/ë¹„í™œì„±í™” ì‹œ ì €ì¥
    }
  }

  Future<void> _saveWindowSize() async {
    if (Platform.isWindows || Platform.isLinux || Platform.isMacOS) {
      final info = await getWindowInfo();
      if (info.frame != null) {
        final prefs = await SharedPreferences.getInstance();
        prefs.setDouble("window_left", info.frame!.left);
        prefs.setDouble("window_top", info.frame!.top);
        prefs.setDouble("window_width", info.frame!.width);
        prefs.setDouble("window_height", info.frame!.height);
      }
    }
  }

  Future<void> _loadTheme() async {
    final prefs = await SharedPreferences.getInstance();
    setState(() {
      _currentThemeKey = prefs.getString("themeKey") ?? "light";
    });
  }

  Future<void> _changeTheme(String themeKey) async {
    final prefs = await SharedPreferences.getInstance();
    await prefs.setString("themeKey", themeKey);
    setState(() {
      _currentThemeKey = themeKey;
    });
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'My Planner',
      theme: appThemes[_currentThemeKey],
      home: PlannerHomePage(onThemeChange: _changeTheme),
    );
  }
}
