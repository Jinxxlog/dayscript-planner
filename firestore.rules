rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // --- Users root doc ---
    match /users/{uid} {
      allow read: if isOwner(uid);

      // Allow profile initialization on first login.
      allow create: if isOwner(uid);

      // Profile-only updates from client. Billing/entitlement fields are server-only.
      allow update: if isOwner(uid)
        && request.resource.data.diff(resource.data).changedKeys()
          .hasOnly([
            'uid',
            'email',
            'providers',
            'displayName',
            'photoURL',
            'updatedAt',
            'resetAt'
          ]);

      allow delete: if false;

      // --- PC device linking subcollection (restricted) ---
      match /devices/{deviceId} {
        allow read: if isOwner(uid);
        allow create, delete: if false; // only Cloud Functions
        allow update: if isOwner(uid)
          && request.resource.data.diff(resource.data).changedKeys()
            .hasOnly(['nickname'])
          && request.resource.data.nickname is string
          && request.resource.data.nickname.size() <= 30;
      }

      // --- Billing ledger (server-only) ---
      match /iapLedger/{docId} {
        allow read, write: if false;
      }

      // --- App data subcollections ---
      // Allow the user to manage their own app data (todos, memos, etc).
      match /{col}/{docId} {
        allow read, write: if isOwner(uid)
          && col != 'devices'
          && col != 'iapLedger';
      }
    }

    // Deny everything else by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
